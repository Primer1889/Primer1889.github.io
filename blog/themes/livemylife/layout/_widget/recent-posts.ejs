<!-- RECENT POSTS -->
<% if (site.posts.length){ %>
  <h5><a href="<%= config.root %>">
      <%= __('recent_posts') %>
    </a></h5>
  <div class="widget">
    <ul style="padding-left: 20px; list-style-type: circle;">
      <% site.posts.sort('date', -1).limit(5).each(function(post){ %>
        <a href="<%- url_for(post.path) %>">
          <li>
            <%= post.title || '' %>
          </li>
        </a>
        <% }) %>
    </ul>
  </div>
  <% } %>