<!-- Categories -->
<% if (site.categories.length){ %>
  <h5><a href="<%= config.root %>categories/">
      <%= __('文章标签') %>
    </a></h5>
  <div class="widget">
    <ul style="margin-left: 0px; padding-left: 20px; ">
      <% site.categories.map(function(category){ %>
        <a href="<%= config.root %>categories/#<%= category.name %>">
          <li>
            <%= category.name %>
          </li>
        </a>
        <% }) %>
    </ul>
  </div>
  <% } %>